.wrapper
  .chat-side
    .chat-side__side-header
      .chat-side__side-header__side-box
        %p.chat-side__side-header__side-box__user-name 
          = current_user.name
        %ul.chat-side__side-header__side-box__menu
          %li.chat-side__side-header__side-box__menu__new-group
          = link_to new_group_path do
            = icon('fas', 'edit')
          %li.chat-side__side-header__side-box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
    .chat-side__groups
      - current_user.groups.each do |group|
        = link_to group_messages_path(group), class:"group" do
          %p.group__name
            = group.name
            -# test
          %p.group__message
            = group.show_last_message
    